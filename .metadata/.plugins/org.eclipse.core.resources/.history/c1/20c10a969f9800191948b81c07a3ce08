package tramp;

public class Card {//カード
	//フィールド変数、カプセル化
	private int mark;//マークのインデックス番号
	private int number;//番号

	//ゲッターとセッター
	public int getMark(){
		return mark;
	}
	public void setMark(int mark) {
		this.mark=mark;
	}
	public int getNumber(){
		return number;
	}
	public void setNum(int number) {
		this.number=number;
	}

	//コンストラクタ
	public Card(int mark,int number){
		this.mark=mark;
		this.number=number;

	}









}
