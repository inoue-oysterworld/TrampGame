package tramp;

import lib.Input;

public class Main {

	public static void main(String[] args) {
		Deck deck=new Deck();
		//System.out.println("山札は現在"+deck.cards.size()+"枚です。");//デバッグ用
		int count=Input.getInt("何枚引きますか?");
		for(int i=0;i<count;i++) {
			Card card1=deck.draw();
			System.out.println(card1.getMark()+"の"+card1.getNumber());//カードのマークと番号を取得
		}



	}

}
