package tramp;

import lib.Input;

public class Main {

	public static void main(String[] args) {
		Deck deck=new Deck();
		System.out.println("山札は現在"+deck.cards.size()+"枚です。");//デバッグ用
		int count=Input.getInt("何枚引きますか?");
		for(int i=0;i<count;i++) {
			Card card=deck.draw();//カードを1枚引く
			System.out.println(card.getMark()+"の"+card.getNumber());//カードのマークと番号を取得
		}



	}

}
